# ================================
# Application Settings
# ================================
APP_NAME=smart-info-notifier
APP_ENV=development         # development | staging | production
LOG_LEVEL=INFO

# ================================
# LLM (Groq)
# ================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0

# ================================
# Email / Notification
# ================================
EMAIL_PROVIDER=outlook       # outlook | smtp
EMAIL_FROM=alerts@company.com
EMAIL_TO=compliance@company.com

# Outlook (Microsoft Graph)
OUTLOOK_CLIENT_ID=your_client_id
OUTLOOK_CLIENT_SECRET=your_client_secret
OUTLOOK_TENANT_ID=your_tenant_id

# SMTP (optional fallback)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=alerts@company.com
SMTP_PASSWORD=your_password

# ================================
# Paths
# ================================
SOURCE_EXCEL_PATH=config/sources.xlsx
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
LOG_PATH=data/logs/app.log

# ================================
# Scraper Settings
# ================================
REQUEST_TIMEOUT=15
USER_AGENT=RegulatoryMonitorBot/1.0

# ================================
# Scheduler
# ================================
RUN_TIMEZONE=Asia/Kolkata
